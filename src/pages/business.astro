---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const businessFeatures = [
  {
    icon: "fas fa-globe",
    title: "Global Reach",
    description: "Send payments to over 100 countries with competitive exchange rates and low fees."
  },
  {
    icon: "fas fa-shield-alt",
    title: "Enterprise Security",
    description: "Bank-level security with multi-factor authentication and fraud protection."
  },
  {
    icon: "fas fa-chart-bar",
    title: "Real-time Analytics",
    description: "Track all your transactions with detailed reporting and analytics dashboard."
  },
  {
    icon: "fas fa-headset",
    title: "Dedicated Support",
    description: "Get priority support from our dedicated business account managers."
  },
  {
    icon: "fas fa-code",
    title: "API Integration",
    description: "Integrate our payment solutions directly into your existing systems."
  },
  {
    icon: "fas fa-users",
    title: "Team Management",
    description: "Manage multiple users with role-based permissions and approval workflows."
  }
];

const pricingPlans = [
  {
    name: "Starter",
    price: "Free",
    description: "Perfect for small businesses just getting started",
    features: [
      "Up to $10,000/month volume",
      "Standard exchange rates",
      "Email support",
      "Basic reporting",
      "5 team members"
    ]
  },
  {
    name: "Professional",
    price: "$49/month",
    description: "For growing businesses with regular international payments",
    features: [
      "Up to $100,000/month volume",
      "Preferred exchange rates",
      "Priority support",
      "Advanced reporting",
      "Unlimited team members",
      "API access"
    ],
    popular: true
  },
  {
    name: "Enterprise",
    price: "Custom",
    description: "For large organizations with complex payment needs",
    features: [
      "Unlimited volume",
      "Best exchange rates",
      "Dedicated account manager",
      "Custom reporting",
      "White-label solutions",
      "SLA guarantees"
    ]
  }
];
---

<Layout title="Business Solutions - Hunt Finance" description="Streamline your business payments with Hunt Finance. Send money globally with competitive rates, enterprise security, and dedicated support.">
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="section bg-background pt-32">
      <div class="container">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div class="animate-on-scroll" data-animation="slide-up">
            <h1 class="heading--xl mb-6 text-secondary">Business Payment Solutions</h1>
            <p class="text--lg text-gray-600 mb-8">Streamline your international payments with our business-grade platform. Send money globally with competitive rates, enterprise security, and dedicated support.</p>
            <div class="flex flex-wrap gap-4">
              <a href="/signup" class="btn btn--primary">Start Free Trial</a>
              <a href="/contact" class="btn btn--outline">Schedule Demo</a>
            </div>
          </div>
          <div class="animate-on-scroll" data-animation="fade-in">
            <img src="https://images.pexels.com/photos/3184291/pexels-photo-3184291.jpeg?auto=compress&cs=tinysrgb&w=800" alt="Business team" class="rounded-lg shadow-lg w-full" />
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="section">
      <div class="container">
        <div class="text-center mb-16 animate-on-scroll" data-animation="slide-up">
          <h2 class="heading--lg mb-4 text-secondary">Why Businesses Choose Hunt Finance</h2>
          <p class="text--md text-gray-600 max-w-3xl mx-auto">Our platform is designed specifically for business needs with enterprise-grade features and support.</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {businessFeatures.map((feature) => (
            <div class="bg-white p-6 rounded-lg shadow-md border border-burnt-200 animate-on-scroll" data-animation="fade-in">
              <div class="w-12 h-12 bg-primary rounded-lg flex items-center justify-center mb-4">
                <i class={`${feature.icon} text-white text-xl`}></i>
              </div>
              <h3 class="text-xl font-semibold mb-3 text-secondary">{feature.title}</h3>
              <p class="text-gray-600">{feature.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Pricing Section -->
    <section class="section bg-background">
      <div class="container">
        <div class="text-center mb-16 animate-on-scroll" data-animation="slide-up">
          <h2 class="heading--lg mb-4 text-secondary">Simple, Transparent Pricing</h2>
          <p class="text--md text-gray-600 max-w-3xl mx-auto">Choose the plan that fits your business needs. No hidden fees, no surprises.</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {pricingPlans.map((plan) => (
            <div class={`bg-white p-8 rounded-lg shadow-md border-2 animate-on-scroll ${plan.popular ? 'border-primary' : 'border-burnt-200'}`} data-animation="fade-in">
              {plan.popular && (
                <div class="bg-primary text-white text-sm font-semibold px-3 py-1 rounded-full inline-block mb-4">Most Popular</div>
              )}
              <h3 class="text-2xl font-bold mb-2 text-secondary">{plan.name}</h3>
              <div class="text-3xl font-bold text-primary mb-2">{plan.price}</div>
              <p class="text-gray-600 mb-6">{plan.description}</p>
              <ul class="space-y-3 mb-8">
                {plan.features.map((feature) => (
                  <li class="flex items-center text-gray-600">
                    <i class="fas fa-check text-primary mr-3"></i>
                    {feature}
                  </li>
                ))}
              </ul>
              <a href="/signup" class={`btn w-full ${plan.popular ? 'btn--primary' : 'btn--outline'}`}>
                {plan.price === 'Custom' ? 'Contact Sales' : 'Get Started'}
              </a>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section bg-primary">
      <div class="container">
        <div class="text-center animate-on-scroll" data-animation="slide-up">
          <h2 class="heading--lg text-white mb-4">Ready to Transform Your Business Payments?</h2>
          <p class="text--md text-white/80 mb-8 max-w-3xl mx-auto">Join thousands of businesses that trust Hunt Finance for their international payment needs.</p>
          <div class="flex flex-wrap gap-4 justify-center">
            <a href="/signup" class="btn bg-white text-primary hover:bg-gray-100">Start Free Trial</a>
            <a href="/contact" class="btn border-2 border-white text-white hover:bg-white/10">Schedule Demo</a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>