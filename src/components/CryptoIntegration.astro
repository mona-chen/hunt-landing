---
import Image from "astro/components/Image.astro"
import cryptoIntegration from "../assets/images/crypto-integration.png"
---

<section class="currency-converter">
  <div class="container">
    
    <div class="currency-converter__content">

      <div class="currency-converter__image animate-on-scroll" data-animation="fade-in">
        <Image src={cryptoIntegration} alt="Currency Converter" />
      </div>

      <div class="currency-converter__text animate-on-scroll" data-animation="slide-up">
        <h2 class="currency-converter__title">Crypto & Fiat Integration</h2>
        <p class="currency-converter__description">Move between crypto and fiat without friction. Convert, send, and withdraw funds seamlessly from your wallet.</p>
        <div class="flex w-full flex-col ">
          <a href="#convert-now" class="btn btn--secondary w-max">Start Processing Funds</a>
          <section class="bg-white  px-4 border-t mt-8">
            <div class="max-w-6xl mx-auto space-y-6 mt-8">
              <!-- First feature row -->
              <div class="flex items-center space-x-4">
                <div class="flex space-x-1">
                  <div class="w-4 h-2 rounded-full bg-gray-400"></div>
                  <div class="w-3 h-2 rounded-full bg-black"></div>
                </div>
                <span class="text-sm text-gray-700">Easy to manage, faster to deliver</span>
              </div>
              
              <!-- Second feature row -->
              <div class="flex items-center space-x-4">
                <div class="grid grid-cols-3 gap-1">
                  <div class="w-2 h-2 rounded-full bg-black"></div>
                  <div class="w-2 h-2 rounded-full bg-black"></div>
                  <div class="w-2 h-2 rounded-full bg-gray-400"></div>
                  <div class="w-2 h-2 rounded-full bg-gray-400"></div>
                  <div class="w-2 h-2 rounded-full bg-gray-400"></div>
                  <div class="w-2 h-2 rounded-full bg-black"></div>
                </div>
                <span class="text-sm text-gray-700">Keep tabs on your trading history across apps.</span>
              </div>
            </div>
          </section>
        </div>
        
      </div>

    </div>
  </div>
</section>

<style lang="scss">
  .currency-converter {
    padding: 5rem 0;
    @apply lg:pl-40 align-middle items-center justify-between flex w-full w-[100%];
    
    &__content {
      display: grid;
      width: 100%;
      grid-template-columns: 1fr;
      gap: 3rem;
      
      @media (min-width: 992px) {
        grid-template-columns: 1fr 1fr;
        align-items: center;
      }
    }
    
    &__text {
      padding: 1rem;
    }
    
    &__title {
      font-size: 1.8rem;
      font-weight: 600;
      color: #1A1A2E;
      margin-bottom: 1.5rem;
      
      @media (min-width: 768px) {
        font-size: 2.5rem;
      }
    }
    
    &__description {
      font-size: 1.125rem;
      color: #737373;
      margin-bottom: 2rem;
      line-height: 1.6;
    }
    
    &__image {
      img {
        // width: 80%;
        @apply w-full md:w-[80%];
        border-radius: 0.5rem;
      }
    }
  }
</style>