---
import Image from 'astro/components/Image.astro'
import logoImage from '../assets/images/full-logo.svg'
---

<footer class="footer">
  <div class="container">
    <div class="footer__grid">
      <div class="footer__column">
        <a href="/" class="footer__logo">
          <Image src={logoImage} alt="Money Transfer Logo" />
        </a>
        <p class="footer__description">Fast, secure, and affordable money transfers worldwide. Send money to friends, family, or businesses with ease.</p>
        <div class="footer__social">
          <a href="#twitter" class="footer__social-link" aria-label="Twitter">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
            </svg>
          </a>
          <a href="#facebook" class="footer__social-link" aria-label="Facebook">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
            </svg>
          </a>
          <a href="#instagram" class="footer__social-link" aria-label="Instagram">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
            </svg>
          </a>
          <a href="#linkedin" class="footer__social-link" aria-label="LinkedIn">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
              <rect x="2" y="9" width="4" height="12"></rect>
              <circle cx="4" cy="4" r="2"></circle>
            </svg>
          </a>
        </div>
      </div>
      
      <div class="footer__column">
        <h3 class="footer__title">Company</h3>
        <div class="footer__links">
          <a href="#about" class="footer__link">About Us</a>
          <a href="#careers" class="footer__link">Careers</a>
          <a href="#press" class="footer__link">Press</a>
          <a href="#blog" class="footer__link">Blog</a>
        </div>
      </div>
      
      <div class="footer__column">
        <h3 class="footer__title">Help & Support</h3>
        <div class="footer__links">
          <a href="#help-center" class="footer__link">Help Center</a>
          <a href="#contact" class="footer__link">Contact Us</a>
          <a href="#privacy" class="footer__link">Privacy Policy</a>
          <a href="#terms" class="footer__link">Terms of Service</a>
        </div>
      </div>
      
      <div class="footer__column">
        <h3 class="footer__title">Subscribe to our newsletter</h3>
        <p class="footer__newsletter-text">Get the latest updates on new features and upcoming events.</p>
        <form class="footer__form">
          <input type="email" placeholder="Your email address" class="footer__input" required />
          <button type="submit" class="footer__submit">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </button>
        </form>
      </div>
    </div>
    
    <div class="footer__bottom">
      <div class="footer__copyright">
        Â© {new Date().getFullYear()} Money Transfer. All rights reserved.
      </div>
      
      <div class="footer__legal">
        <a href="#privacy" class="footer__legal-link">Privacy</a>
        <a href="#terms" class="footer__legal-link">Terms</a>
        <a href="#cookies" class="footer__legal-link">Cookies</a>
      </div>
    </div>
  </div>
</footer>

<style lang="scss">
  .footer {
    padding: 4rem 0 2rem;
    background-color: white;
    
    &__grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 2rem;
      margin-bottom: 3rem;
      
      @media (min-width: 768px) {
        grid-template-columns: repeat(2, 1fr);
      }
      
      @media (min-width: 992px) {
        grid-template-columns: repeat(4, 1fr);
      }
    }
    
    &__column {
      display: flex;
      flex-direction: column;
    }
    
    &__logo {
      display: inline-block;
      margin-bottom: 1.5rem;
      
      img {
        height: 24px;
      }
    }
    
    &__description {
      color: #555;
      margin-bottom: 1.5rem;
      line-height: 1.6;
    }
    
    &__social {
      display: flex;
      gap: 1rem;
    }
    
    &__social-link {
      display: flex;
      align-items: center;
      justify-content: center;
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background-color: #f5f5f5;
      color: #555;
      transition: all 0.3s ease;
      
      &:hover {
        background-color: #CC5500;
        color: white;
      }
    }
    
    &__title {
      font-size: 1.125rem;
      font-weight: 600;
      color: #1A1A2E;
      margin-bottom: 1.5rem;
    }
    
    &__links {
      display: flex;
      flex-direction: column;
      gap: 0.75rem;
    }
    
    &__link {
      color: #555;
      transition: color 0.3s ease;
      
      &:hover {
        color: #FF5C00;
      }
    }
    
    &__newsletter-text {
      color: #555;
      margin-bottom: 1rem;
      line-height: 1.6;
    }
    
    &__form {
      display: flex;
      border: 1px solid #e5e5e5;
      border-radius: 0.25rem;
      overflow: hidden;
    }
    
    &__input {
      flex-grow: 1;
      padding: 0.75rem 1rem;
      border: none;
      outline: none;
      
      &::placeholder {
        color: #aaa;
      }
    }
    
    &__submit {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0.75rem 1rem;
      background-color: #FF5C00;
      color: white;
      border: none;
      cursor: pointer;
      transition: background-color 0.3s ease;
      
      &:hover {
        background-color: #E65300;
      }
    }
    
    &__bottom {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding-top: 2rem;
      border-top: 1px solid #e5e5e5;
      
      @media (min-width: 768px) {
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
      }
    }
    
    &__copyright {
      color: #777;
      font-size: 0.875rem;
    }
    
    &__legal {
      display: flex;
      gap: 1.5rem;
      
      a {
        color: #777;
        font-size: 0.875rem;
        transition: color 0.3s ease;
        
        &:hover {
          color: #FF5C00;
        }
      }
    }
  }
</style>